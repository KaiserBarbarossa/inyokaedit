<?xml version="1.0"?>
<!--
  This document is used to generate community specific menus/toolbars/dropdowns.
  "Path" is relative to share / user data path.
  "Icon" and .tpl/.macro "insert" is relative to "path".
  
  Don't forget to mask the following characters, if used inside a string:
   * & -> &amp;
   * < -> &lt;
   * > -> &gt;
   * ' -> &apos;
   * " -> &quot;
-->
<menu name="Toolbar" path="toolbar">
  <group name="">
    <element name="Bold - files, folders, packages, formatnames" insert="&apos;&apos;&apos;%%Bold%%&apos;&apos;&apos;" icon="format-text-bold.png" />
    <element name="Italic - menus, buttons" insert="&apos;&apos;%%Italic%%&apos;&apos;" icon="format-text-italic.png" />
    <element name="Monotype - commands und options, terminal output, users/groups" insert="`%%Monotype%%`" icon="monotype.png" />
    <element name="Unsorted list" insert=" * %%List%%" icon="list-unsorted.png" />
    <element name="Sorted list" insert=" 1. %%List%%" icon="list-sorted.png" />
    <element name="Link to Inyoka-Wiki" insert="[:%%Sitename%%:]" icon="go-next.png" />
    <element name="Link to external website" insert="[%%http://www.example.org/%%]  {en}" icon="internet-web-browser.png" />
    <element name="Insert image" insert="[[Bild(%%image.png%%)]]" icon="image-x-generic.png" />
  </group>
  <group name="Code block" icon="code.png">
    <element name="Raw text" insert="{{{\n%%Code%%\n}}}\n" icon="" />
    <element name="Code without highlighting" insert="{{{#!code text\n%%Code%%\n}}}\n" icon="" />
    <element name="Bash" insert="{{{#!code bash\n%%Code%%\n}}}\n" icon="" />
    <element name="C" insert="{{{#!code c\n%%Code%%\n}}}\n" icon="" />
    <element name="C#" insert="{{{#!code csharp\n%%Code%%\n}}}\n" icon="" />
    <element name="C++" insert="{{{#!code cpp\n%%Code%%\n}}}\n" icon="" />
    <element name="CSS" insert="{{{#!code css\n%%Code%%\n}}}\n" icon="" />
    <element name="D" insert="{{{#!code d\n%%Code%%\n}}}\n" icon="" />
    <element name="Django / Jinja Templates" insert="{{{#!code html+django\n%%Code%%\n}}}\n" icon="" />
    <element name="HTML" insert="{{{#!code html\n%%Code%%\n}}}\n" icon="" />
    <element name="IRC Logs" insert="{{{#!code irc\n%%Code%%\n}}}\n" icon="" />
    <element name="Java" insert="{{{#!code java\n%%Code%%\n}}}\n" icon="" />
    <element name="JavaScript" insert="{{{#!code js\n%%Code%%\n}}}\n" icon="" />
    <element name="Perl" insert="{{{#!code perl\n%%Code%%\n}}}\n" icon="" />
    <element name="PHP" insert="{{{#!code html+php\n%%Code%%\n}}}\n" icon="" />
    <element name="Python" insert="{{{#!code python\n%%Code%%\n}}}\n" icon="" />
    <element name="Python Console Sessions" insert="{{{#!code pycon\n%%Code%%\n}}}\n" icon="" />
    <element name="Python Tracebacks" insert="{{{#!code pytb\n%%Code%%\n}}}\n" icon="" />
    <element name="Ruby" insert="{{{#!code ruby\n%%Code%%\n}}}\n" icon="" />
    <element name="sources.list" insert="{{{#!code sourceslist\n%%Code%%\n}}}\n" icon="" />
    <element name="SQL" insert="{{{#!code sql\n%%Code%%\n}}}\n" icon="" />
    <element name="XML" insert="{{{#!code xml\n%%Code%%\n}}}\n" icon="" />
  </group>
</menu>
