<?xml version="1.0"?>
<!--
  This document is used to generate community specific menus/toolbars/dropdowns.
  "Path" is relative to share / user data path.
  "Icon" and .tpl/.macro "insert" is relative to "path".
  
  Don't forget to mask the following characters, if used inside a string:
   * & -> &amp;
   * < -> &lt;
   * > -> &gt;
   * ' -> &apos;
   * " -> &quot;
-->
<menu name="Toolbar" path="../toolbar">
  <group name="">
    <element name="Fett - Dateinamen, Verzeichnisse, Paketnamen, Formatnamen" insert="&apos;&apos;&apos;%%Fett%%&apos;&apos;&apos;" icon="bold.png" />
    <element name="Kursiv - Menüelemente, Schaltflächen" insert="&apos;&apos;%%Kursiv%%&apos;&apos;" icon="italic.png" />
    <element name="Monotype - Befehle und Optionen, Terminalausgaben im Fließtext, Benutzer/Gruppen" insert="`%%Monotype%%`" icon="monotype.png" />
    <element name="Unsortierte Liste" insert=" * %%Liste%%" icon="list-unsorted.png" />
    <element name="Nummerierte Liste" insert=" 1. %%Nummerierte Liste%%" icon="list-sorted.png" />
    <element name="Link auf eine Inyoka-Wikiseite" insert="[:%%Seitenname%%:]" icon="interwiki.png" />
    <element name="Link auf eine externe Webseite" insert="[%%http://www.beispiel.org/%%] {en}" icon="link.png" />
    <element name="Bild einfügen" insert="[[Bild(%%Bild.png%%)]]" icon="image.png" />
  </group>
  <group name="Codeblock" icon="code.png">
    <element name="Rohtext" insert="{{{\n%%Code%%\n}}}\n" icon="" />
    <element name="Code ohne Hervorhebung" insert="{{{#!code text\n%%Code%%\n}}}\n" icon="" />
    <element name="Bash" insert="{{{#!code bash\n%%Code%%\n}}}\n" icon="" />
    <element name="C" insert="{{{#!code c\n%%Code%%\n}}}\n" icon="" />
    <element name="C#" insert="{{{#!code csharp\n%%Code%%\n}}}\n" icon="" />
    <element name="C++" insert="{{{#!code cpp\n%%Code%%\n}}}\n" icon="" />
