    <element name="Django / Jinja Templates" insert="{{{#!code html+django\n%%Code%%\n}}}\n" icon="" />
    <element name="HTML" insert="{{{#!code html\n%%Code%%\n}}}\n" icon="" />
    <element name="IRC Logs" insert="{{{#!code irc\n%%Code%%\n}}}\n" icon="" />
    <element name="Java" insert="{{{#!code java\n%%Code%%\n}}}\n" icon="" />
